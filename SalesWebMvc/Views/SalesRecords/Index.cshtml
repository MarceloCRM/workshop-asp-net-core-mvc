@{
    ViewData["Title"] = "Sales Records";
}

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="bi bi-journal-text"></i> @ViewData["Title"]</h2>
    </div>

    <div class="row g-4">
        <!-- Simple Search -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-search"></i> Simple Search</h5>
                </div>
                <div class="card-body">
                    <form asp-action="SimpleSearch" class="row gy-2 gx-3">
                        <div class="col-12">
                            <label for="minDate" class="form-label">Start Date</label>
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label for="maxDate" class="form-label">End Date</label>
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                        <div class="col-12 text-end mt-2">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-filter-circle-fill"></i> Apply Filter
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Grouping Search -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-diagram-3-fill"></i> Grouping Search</h5>
                </div>
                <div class="card-body">
                    <form asp-action="GroupingSearch" class="row gy-2 gx-3">
                        <div class="col-12">
                            <label for="minDate" class="form-label">Start Date</label>
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                        <div class="col-12">
                            <label for="maxDate" class="form-label">End Date</label>
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                        <div class="col-12 text-end mt-2">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-filter-circle-fill"></i> Apply Filter
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
