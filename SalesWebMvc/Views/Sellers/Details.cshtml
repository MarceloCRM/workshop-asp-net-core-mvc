@model SalesWebMvc.Models.Seller
@{
    ViewData["Title"] = "Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Seller</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            BirthDay
        </dt>
        <dd class="col-sm-10">
            @Model.BirthDay.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            BaseSalary
        </dt>
        <dd class="col-sm-10">
            @Model.BaseSalary.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)
        </dd>
        <dt class="col-sm-2">
            Department  
        </dt>
        <dd class="col-sm-10">
            @Model.Department.Name
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>