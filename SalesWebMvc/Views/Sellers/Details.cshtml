@model SalesWebMvc.Models.Seller
@{
    ViewData["Title"] = "Seller Details";
}

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-md-1 col-lg-5">
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-eye-fill"></i> Seller Details</h5>
                </div>
                <div class="card-body">

                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Birth Date</dt>
                        <dd class="col-sm-9">@Model.BirthDay.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-3">Salary</dt>
                        <dd class="col-sm-9">@Model.BaseSalary.ToString("C")</dd>

                        <dt class="col-sm-3">Department</dt>
                        <dd class="col-sm-9">@Model.Department.Name</dd>
                    </dl>

                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success me-2">
                        <i class="bi bi-pencil-fill"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>