@model SalesWebMvc.Models.Seller
@{
    ViewData["Title"] = "Delete";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this? </h3>

<div>
    <h4>Seller</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            BirthDay
        </dt>
        <dd class="col-sm-10">
            @Model.BirthDay.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            BaseSalary
        </dt>
        <dd class="col-sm-10">
            @Model.BaseSalary.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Delete" class="btn btn-danger"/>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>