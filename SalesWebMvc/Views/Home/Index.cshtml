@{
    Layout = null;
    ViewData["Title"] = "Home";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SalesWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-flatly.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SalesWebMvc.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="d-flex flex-column min-vh-100 overflow-hidden">
    <main role="main" class="flex-fill">
        <div class="container text-center mt-5">
            <h1 class="text-primary mb-4"><i class="bi bi-house-door-fill"></i> Welcome to SalesWeb</h1>
            <p class="lead">Manage your sales, sellers and departments easily and efficiently.</p>
            <hr />
            <div class="row justify-content-center mt-4">
                <div class="col-md-4">
                    <a asp-controller="Sellers" asp-action="Index" class="btn btn-outline-primary w-100 mb-2">
                        <i class="bi bi-person-lines-fill"></i> View Sellers
                    </a>
                    <a asp-controller="Departments" asp-action="Index" class="btn btn-outline-success w-100 mb-2">
                        <i class="bi bi-diagram-3-fill"></i> View Departments
                    </a>
                    <a asp-controller="SalesRecords" asp-action="Index" class="btn btn-outline-info w-100">
                        <i class="bi bi-journal-text"></i> Sales Records
                    </a>
                </div>
            </div>
        </div>


    </main>
    <footer class="border-top footer text-muted py-3 mt-auto">
        <div class="container text-center p-3" style="margin-top:2px;margin-bottom:2.5px;">
            &copy; 2025 - SalesWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">About me</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

